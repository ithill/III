package tw.leonchen.my.project.ArrayString;

public class RandomArray {

	public static void main(String[] args) {
		int[] arr = new int[52];
		int count = 0;
		int number = (int) (Math.random() * 52) + 1;

		for (int i = 0; i < 52; i++) {
			boolean f = true;
			for (int j = 0; j < i; j++) {
				if (arr[number - 1] == 0) {
					System.out.print(number + " ");
					count++;
				} else
					break;
				if (count == 4) {
					break;
				}
			}
		}
	}
}
